---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
	hideHeader?: boolean;
}

const { title, description = "Masters Golf Cars offers golf carts for sale and rent in Belleview, FL near the Villages and Ocala.", hideHeader = false } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			:root {
				--brand-green: #86CA26;
			}
			.hover-green:hover {
				color: #86CA26 !important;
			}
			.bg-brand-green {
				background-color: #86CA26 !important;
			}
			.text-brand-green {
				color: #86CA26 !important;
			}
			.border-brand-green {
				border-color: #86CA26 !important;
			}
			.focus-brand-green:focus {
				--tw-ring-color: #86CA26;
			}
		</style>
	</head>
	<body class="min-h-screen bg-gray-50">
		{!hideHeader && <Header />}
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

