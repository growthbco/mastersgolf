---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import companyData from '../data/company.json';
import servicesData from '../data/services.json';
---

<Layout title={`${companyData.name} - ${companyData.tagline}`} hideHeader={true}>
	<!-- Hero Section with Golf Course Background -->
	<section class="relative min-h-screen flex flex-col">
		<!-- Full-screen golf course background -->
		<div class="absolute inset-0 z-0" style="background-image: url('/images/landing-pg-hero-3.jpg'); background-size: cover; background-position: center;"></div>
		
		<!-- Transparent Header Overlay -->
		<Header transparent={true} />
		
		<!-- Spacer to push carts to bottom -->
		<div class="flex-grow min-h-[30vh]"></div>
		
		<!-- Golf Carts Row - Transparent Overlay -->
		<div class="relative z-10 py-16">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 max-w-7xl mx-auto">
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/rental-club-car-golf-cart_img_v38.webp" alt="Club Car Golf Cart" class="w-full h-auto max-h-64 object-contain" style="filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4)) drop-shadow(0 5px 10px rgba(0,0,0,0.3));" />
					</div>
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/fleet-rental-club-car-golf-cart_img_v39.webp" alt="Fleet Club Car Golf Cart" class="w-full h-auto max-h-64 object-contain" style="filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4)) drop-shadow(0 5px 10px rgba(0,0,0,0.3));" />
					</div>
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/fleet-rental-ez-go-golf-cart_img_v40.webp" alt="EZ-GO Golf Cart" class="w-full h-auto max-h-64 object-contain" style="filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4)) drop-shadow(0 5px 10px rgba(0,0,0,0.3));" />
					</div>
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/masters-golf-cars-advanced-ev-golf-cart_img_v41.webp" alt="Advanced EV Golf Cart" class="w-full h-auto max-h-64 object-contain" style="filter: drop-shadow(0 15px 30px rgba(0,0,0,0.4)) drop-shadow(0 5px 10px rgba(0,0,0,0.3));" />
					</div>
				</div>
			</div>
		</div>
		
		<!-- CTA Boxes -->
		<div class="relative z-10 bg-white py-8">
			<div class="container mx-auto px-4">
				<div class="flex flex-wrap justify-center items-center gap-4 max-w-6xl mx-auto">
					<a href="/rentals" class="bg-black hover:bg-gray-900 text-white px-6 py-4 text-center font-bold uppercase text-base transition">
						Cart Rentals
					</a>
					<a href="/fleet" class="bg-black hover:bg-gray-900 text-white px-6 py-4 text-center font-bold uppercase text-base transition">
						Fleet Rentals
					</a>
					<a href="/inventory" class="bg-black hover:bg-gray-900 text-white px-6 py-4 text-center font-bold uppercase text-base transition">
						Golf Carts For Sale
					</a>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Search Inventory Section -->
	<section class="bg-white py-12 relative">
		<!-- Grass texture border at top -->
		<div class="absolute top-0 left-0 right-0 h-12 overflow-hidden">
			<img src="/images/grass-edge-min.png" alt="" class="w-full h-full object-cover object-top" />
		</div>
		
		<!-- Green background below grass -->
		<div class="absolute top-12 left-0 right-0 bottom-0" style="background-color: #86CA25;"></div>
		
		<div class="container mx-auto px-4 pt-16 relative z-10">
			<h2 class="text-3xl md:text-4xl font-bold text-gray-800 text-center mb-8">Search Our Golf Cart Inventory</h2>
			
			<form action="/inventory" method="GET" class="max-w-5xl mx-auto">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
					<!-- Condition Dropdown -->
					<div>
						<label for="condition" class="block text-gray-800 font-semibold mb-2">Condition</label>
						<select id="condition" name="condition" class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-green-600">
							<option value="">Any</option>
							<option value="new">New</option>
							<option value="used">Used</option>
						</select>
					</div>
					
					<!-- Brand Dropdown -->
					<div>
						<label for="brand" class="block text-gray-800 font-semibold mb-2">Brand</label>
						<select id="brand" name="brand" class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-green-600">
							<option value="">Any</option>
							<option value="advanced-ev">Advanced EV</option>
							<option value="club-car">Club Car</option>
							<option value="ez-go">EZ-GO</option>
							<option value="yamaha">Yamaha</option>
						</select>
					</div>
					
					<!-- Keyword/Stock # Input -->
					<div>
						<label for="keyword" class="block text-gray-800 font-semibold mb-2">Keyword Or Stock #</label>
						<input type="text" id="keyword" name="keyword" placeholder="Any" class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-green-600" />
					</div>
					
					<!-- Search Button -->
					<div>
						<button type="submit" class="w-full bg-black hover:bg-gray-900 text-white px-8 py-3 rounded-lg font-bold uppercase transition flex items-center justify-center gap-2">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
							</svg>
							SEARCH
						</button>
					</div>
				</div>
			</form>
		</div>
	</section>
	
	<!-- Advent Lineup Section -->
	<section class="relative py-16" style="background-color: #F3F3F3;">
		<!-- Green bar at top -->
		<div class="absolute top-0 left-0 right-0 h-1" style="background-color: #86CA25;"></div>
		
		<div class="container mx-auto px-4 pt-8">
			<div class="flex flex-col md:flex-row items-start md:items-center gap-8 md:gap-12">
				<!-- Title -->
				<div class="mb-12 md:mb-0 flex-shrink-0">
					<h2 class="text-6xl md:text-7xl font-bold text-gray-400 mb-2">
						ADV<span class="text-green-600">E</span>NT
					</h2>
					<p class="text-xl text-gray-800 font-semibold">OUR LINEUPS</p>
				</div>
				
				<!-- Vehicle Grid -->
				<div class="flex-1 grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 ml-auto">
				<!-- Advent -->
				<div class="text-center">
					<div class="mb-4">
						<img src="/images/Advent Section/advent-golf-cart_img_v43 (1).webp" alt="Advent Golf Cart" class="w-full h-auto object-contain max-h-64 mx-auto" />
					</div>
					<div class="flex justify-center">
						<img src="/images/Advent Section/advent-logo_img_v49.webp" alt="Advent" class="h-8" />
					</div>
				</div>
				
				<!-- Horizon -->
				<div class="text-center">
					<div class="mb-4">
						<img src="/images/Advent Section/ae-horizon-golf-cart_img_v44.webp" alt="Horizon Golf Cart" class="w-full h-auto object-contain max-h-64 mx-auto" />
					</div>
					<div class="flex justify-center">
						<img src="/images/Advent Section/advanced-ev-horizon-logo_img_v50.webp" alt="Advanced EV Horizon" class="h-8" />
					</div>
				</div>
				
				<!-- Advent Click / HD Click -->
				<div class="text-center">
					<div class="mb-4">
						<img src="/images/Advent Section/ae-advent-click-golf-cart_img_v45.webp" alt="Advent Click Golf Cart" class="w-full h-auto object-contain max-h-64 mx-auto" />
					</div>
					<div class="flex justify-center">
						<img src="/images/Advent Section/advanced-ev-advent-click-logo_img_v51.webp" alt="Advent Click" class="h-8" />
					</div>
				</div>
				
				<!-- Advent HD -->
				<div class="text-center">
					<div class="mb-4">
						<img src="/images/Advent Section/ae-advent-hd-golf-cart_img_v46.webp" alt="Advent HD Golf Cart" class="w-full h-auto object-contain max-h-64 mx-auto" />
					</div>
					<div class="flex justify-center">
						<img src="/images/Advent Section/advanced-ev-advent-hd-logo_img_v52.webp" alt="Advent HD" class="h-8" />
					</div>
				</div>
				
				<!-- Specialty Vehicles -->
				<div class="text-center">
					<div class="mb-4">
						<img src="/images/Advent Section/ae-advent-specialty-golf-cart_img_v47.webp" alt="Advent Specialty Vehicle" class="w-full h-auto object-contain max-h-64 mx-auto" />
					</div>
					<div class="flex justify-center">
						<img src="/images/Advent Section/advanced-ev-advent-specialty-vehicles-logo_img_v53.webp" alt="Advent Specialty Vehicles" class="h-8" />
					</div>
				</div>
				
				<!-- Stellar -->
				<div class="text-center">
					<div class="mb-4">
						<img src="/images/Advent Section/ae-advent-stellar-golf-cart_img_v48.webp" alt="Stellar Vehicle" class="w-full h-auto object-contain max-h-64 mx-auto" />
					</div>
					<div class="flex justify-center">
						<img src="/images/Advent Section/advanced-ev-stellar-logo_img_v54.webp" alt="Stellar" class="h-8" />
					</div>
				</div>
				</div>
			</div>
		</div>
	</section>
	
	<!-- Welcome Section -->
	<section class="bg-white py-16">
		<div class="container mx-auto px-4">
			<!-- Heading -->
			<h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4 text-center">
				Welcome to {companyData.name}
			</h2>
			<p class="text-2xl md:text-3xl font-bold text-gray-800 mb-8 text-center">
				{companyData.tagline}
			</p>
			
			<!-- Description Paragraphs -->
			<div class="max-w-4xl mx-auto mb-12">
				<p class="text-lg text-gray-700 mb-6">
					{companyData.description}
				</p>
				
				<p class="text-lg text-gray-700 mb-4">
					<strong>Comprehensive Services Tailored to Your Needs</strong>
				</p>
				<ul class="text-lg text-gray-700 space-y-3 mb-6">
					<li>
						<strong>Golf Cart Rentals:</strong> Whether you need a single cart or an entire fleet, we offer flexible rental options ideal for events like concerts, equestrian, parades, festivals, and more!
					</li>
					<li>
						<strong>Sales of New and Pre-Owned Carts:</strong> Explore an extensive selection of new and used golf carts, including custom-built units, fleet units, trade-ins, and wholesale options.
					</li>
					<li>
						<strong>Customization:</strong> Bring your vision to life with personalized golf carts tailored to your specific preferences and needs.
					</li>
					<li>
						<strong>Maintenance and Repairs:</strong> Ensure your cart remains in peak condition with their expert maintenance and repair services.
					</li>
				</ul>
			</div>
			
			<!-- CTA Buttons -->
			<div class="flex flex-wrap justify-center gap-4 mb-16 max-w-4xl mx-auto">
				<a href="/sell-your-cart" class="bg-black hover:bg-gray-900 text-white px-8 py-4 text-center font-bold uppercase text-base transition">
					SELL YOUR CART
				</a>
				<a href="/schedule-golf-cart-service" class="bg-black hover:bg-gray-900 text-white px-8 py-4 text-center font-bold uppercase text-base transition">
					SCHEDULE A REPAIR
				</a>
				<a href="/rentals" class="bg-black hover:bg-gray-900 text-white px-8 py-4 text-center font-bold uppercase text-base transition">
					RENT A CART
				</a>
				<a href="/fleet" class="bg-black hover:bg-gray-900 text-white px-8 py-4 text-center font-bold uppercase text-base transition">
					FLEET RENTALS
				</a>
			</div>
			
			<!-- Brands Section -->
			<div class="max-w-6xl mx-auto">
				<h3 class="text-3xl md:text-4xl font-bold text-gray-800 text-center mb-12">
					Brands We Work With
				</h3>
				<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8 items-center">
					{servicesData.brands.map((brand) => (
						<div class="flex items-center justify-center p-4 group cursor-pointer">
							<img src={brand.icon} alt={brand.name} class="max-h-16 w-full object-contain transition-transform duration-300 group-hover:scale-110 group-hover:opacity-80" />
						</div>
					))}
				</div>
			</div>
		</div>
	</section>
	
	<!-- Financing Section -->
	<section class="bg-gray-100 py-16">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<!-- Title -->
				<h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6">
					Easy Financing is Available on all new and used carts!
				</h2>
				
				<!-- Description -->
				<p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
					What's the best path for you? We have many tools to share. Please stop by our office and share what would be a good fit for you. We use a number of best-in-class sources to help your dreams come true. We look forward to helping you.
				</p>
				
				<!-- Sheffield Financial Logo -->
				<div class="mb-8 flex justify-center">
					<img src="/images/logos/sheffield-financial_img_v25.webp" alt="Sheffield Financial" class="h-16 md:h-20 object-contain" />
				</div>
				
				<!-- Apply Button -->
				<a href="https://prequalify.sheffieldfinancial.com/Apply/Landing?source=web&dealer=57070" target="_blank" rel="noopener noreferrer" class="inline-block bg-black hover:bg-gray-900 text-white px-8 py-4 font-bold uppercase text-base transition">
					APPLY FOR FINANCING
				</a>
			</div>
		</div>
	</section>
	
	<!-- Advanced EV Advent Carousel Section -->
	<section class="bg-white py-16">
		<div class="container mx-auto px-4">
			<!-- Description Text -->
			<div class="max-w-4xl mx-auto mb-12">
				<p class="text-lg text-gray-700 text-center">
					Elevate your lifestyle in the all-new Advanced EV Advent. The Advent boasts sleek style, a world class suspension, and an energy efficient AC powertrain. Its on-road finesse and higher ground clearance contribute towards an industry leading ride quality. All Advents come standard with an LED Drive Package, independent front suspension, Electromagnetic Brakes, and an Onboard Charger/Maintainer.
				</p>
			</div>
			
			<!-- Carousel Container -->
			<div class="relative max-w-7xl mx-auto">
				<!-- Navigation Arrows -->
				<button id="adventCarouselPrev" class="absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-gray-200 hover:bg-gray-300 rounded-full p-3 transition hidden md:flex items-center justify-center">
					<svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
				</button>
				<button id="adventCarouselNext" class="absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-gray-200 hover:bg-gray-300 rounded-full p-3 transition hidden md:flex items-center justify-center">
					<svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
				</button>
				
				<!-- Scrollable Carousel -->
				<div id="adventCarousel" class="overflow-x-auto scroll-smooth scrollbar-hide flex gap-6 md:gap-8 pb-4" style="scrollbar-width: none; -ms-overflow-style: none;">
					<!-- Product Card 1: Advent 2 -->
					<div class="flex-shrink-0 w-80 md:w-96 bg-white shadow-lg rounded-lg overflow-hidden">
						<!-- Image Container with Overlay -->
						<div class="relative">
							<img src="https://i31.dlrwebservice.com/52004/i/139811/wm650/3_52004_139811_8156808.jpg" alt="2025 Advanced EV Advent 2 Deluxe Golf Ready" class="w-full h-64 object-cover" />
							<!-- Overlay with Logo -->
							<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4">
								<div class="flex items-center gap-3 mb-2">
									<img src={companyData.logo} alt="Masters Golf Cars" class="h-12" />
								</div>
								<p class="text-white text-xs mb-1">GOLF CARS, LLC.</p>
								<p class="text-white text-xs mb-1">SALES • SERVICE • RENTALS</p>
								<p class="text-green-500 text-sm font-semibold">{companyData.contact.phone}</p>
								<p class="text-white text-xs mt-2">©2025 Masters Golf Cars</p>
							</div>
						</div>
						<!-- Product Info -->
						<div class="p-6">
							<h3 class="text-xl font-bold text-gray-800 mb-4">2025 Advanced EV Advent 2 Deluxe Golf Ready</h3>
							<div class="space-y-2">
								<p class="text-gray-600 line-through">Price: $14,595.00</p>
								<p class="text-2xl font-bold text-gray-800">Sale Price: $13,395.00</p>
							</div>
						</div>
						<!-- Black Footer -->
						<div class="bg-black h-2"></div>
					</div>
					
					<!-- Product Card 2: Advent 4F -->
					<div class="flex-shrink-0 w-80 md:w-96 bg-white shadow-lg rounded-lg overflow-hidden">
						<!-- Image Container with Overlay -->
						<div class="relative">
							<img src="https://i31.dlrwebservice.com/52004/i/139819/wm650/3_52004_139819_8156859.jpg" alt="2025 Advanced EV Advent 4F Deluxe Golf Ready" class="w-full h-64 object-cover" />
							<!-- Overlay with Logo -->
							<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4">
								<div class="flex items-center gap-3 mb-2">
									<img src={companyData.logo} alt="Masters Golf Cars" class="h-12" />
								</div>
								<p class="text-white text-xs mb-1">GOLF CARS, LLC.</p>
								<p class="text-white text-xs mb-1">SALES • SERVICE • RENTALS</p>
								<p class="text-green-500 text-sm font-semibold">{companyData.contact.phone}</p>
								<p class="text-white text-xs mt-2">©2025 Masters Golf Cars</p>
							</div>
						</div>
						<!-- Product Info -->
						<div class="p-6">
							<h3 class="text-xl font-bold text-gray-800 mb-4">2025 Advanced EV Advent 4F Deluxe Golf Ready</h3>
							<div class="space-y-2">
								<p class="text-gray-600 line-through">Price: $17,595.00</p>
								<p class="text-2xl font-bold text-gray-800">Sale Price: $16,195.00</p>
							</div>
						</div>
						<!-- Black Footer -->
						<div class="bg-black h-2"></div>
					</div>
					
					<!-- Product Card 3: Advent 2 (Second one) -->
					<div class="flex-shrink-0 w-80 md:w-96 bg-white shadow-lg rounded-lg overflow-hidden">
						<!-- Image Container with Overlay -->
						<div class="relative">
							<img src="https://mastersgolfcars.com/WebResource.axd?d=p0DvQO950oVj9655gaE-crYigeYq9SznsgqPbj_WLxFU_FI3wTLO5LZtLWukUvswYh3WrwOHWltTlS3QxiHAfmjvYS9iqj9N54lO_QAPBdd-CIgw9_esAtA3npQz9MD0DlBYjLp6Pmx1zh6k3-1cwQ2&t=638949988398580819" alt="2025 Advanced EV Advent 2 Deluxe Golf Ready" class="w-full h-64 object-cover" />
							<!-- Overlay with Logo -->
							<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4">
								<div class="flex items-center gap-3 mb-2">
									<img src={companyData.logo} alt="Masters Golf Cars" class="h-12" />
								</div>
								<p class="text-white text-xs mb-1">GOLF CARS, LLC.</p>
								<p class="text-white text-xs mb-1">SALES • SERVICE • RENTALS</p>
								<p class="text-green-500 text-sm font-semibold">{companyData.contact.phone}</p>
								<p class="text-white text-xs mt-2">©2025 Masters Golf Cars</p>
							</div>
						</div>
						<!-- Product Info -->
						<div class="p-6">
							<h3 class="text-xl font-bold text-gray-800 mb-4">2025 Advanced EV Advent 2 Deluxe Golf Ready</h3>
							<div class="space-y-2">
								<p class="text-gray-600 line-through">Price: $14,595.00</p>
								<p class="text-2xl font-bold text-gray-800">Sale Price: $13,395.00</p>
							</div>
						</div>
						<!-- Black Footer -->
						<div class="bg-black h-2"></div>
					</div>
				</div>
			</div>
		</div>
	</section>
	
	<script is:inline>
		// Carousel navigation
		document.addEventListener('DOMContentLoaded', () => {
			const carousel = document.getElementById('adventCarousel');
			const prevBtn = document.getElementById('adventCarouselPrev');
			const nextBtn = document.getElementById('adventCarouselNext');
			const cardWidth = 384; // w-96 = 384px
			const gap = 32; // gap-8 = 32px
			const scrollAmount = cardWidth + gap;
			
			if (prevBtn && nextBtn && carousel) {
				prevBtn.addEventListener('click', () => {
					carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
				});
				
				nextBtn.addEventListener('click', () => {
					carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
				});
			}
		});
	</script>
	
	<style>
		.scrollbar-hide::-webkit-scrollbar {
			display: none;
		}
	</style>
	
	<!-- About Section with Grass Background -->
	<section class="relative py-16 overflow-hidden">
		<!-- Grass Background -->
		<div class="absolute inset-0 z-0">
			<img src="/images/logos/bg_1_16.webp" alt="Golf Course Background" class="w-full h-full object-cover" />
		</div>
		
		<!-- Content Container -->
		<div class="relative z-10 container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<!-- White Text Box -->
				<div class="bg-white rounded-lg shadow-xl p-8 md:p-12">
					<!-- Heading -->
					<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-center">
						Your #1 Source for Golf Carts in Ocala, The Villages and Central Florida
					</h2>
					
