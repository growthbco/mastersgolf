---
import Layout from '../layouts/Layout.astro';
import companyData from '../data/company.json';
---

<Layout title={`${companyData.name} - ${companyData.tagline}`}>
	<!-- Hero Section with Golf Course Background -->
	<section class="relative -mt-48 min-h-screen flex flex-col">
		<!-- Full-screen golf course background -->
		<div class="absolute inset-0 z-0" style="background-image: url('https://images.unsplash.com/photo-1535131749006-b7f58c99034b?w=1920&q=80'); background-size: cover; background-position: center; background-attachment: fixed;"></div>
		
		<!-- Spacer to push content to bottom -->
		<div class="flex-grow min-h-[60vh]"></div>
		
		<!-- Golf Carts Row on Light Background -->
		<div class="relative z-10 bg-gray-50 py-16">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-2 md:grid-cols-4 gap-6 md:gap-8 max-w-7xl mx-auto">
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/rental-club-car-golf-cart_img_v38.webp" alt="Club Car Golf Cart" class="w-full h-auto max-h-64 object-contain" />
					</div>
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/fleet-rental-club-car-golf-cart_img_v39.webp" alt="Fleet Club Car Golf Cart" class="w-full h-auto max-h-64 object-contain" />
					</div>
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/fleet-rental-ez-go-golf-cart_img_v40.webp" alt="EZ-GO Golf Cart" class="w-full h-auto max-h-64 object-contain" />
					</div>
					<div class="flex justify-center items-end">
						<img src="/images/home page carts/masters-golf-cars-advanced-ev-golf-cart_img_v41.webp" alt="Advanced EV Golf Cart" class="w-full h-auto max-h-64 object-contain" />
					</div>
				</div>
			</div>
		</div>
		
		<!-- CTA Boxes -->
		<div class="relative z-10 bg-black py-8">
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-4 max-w-6xl mx-auto">
					<a href="/rentals" class="bg-black hover:bg-gray-900 text-white px-8 py-6 text-center font-bold uppercase text-lg transition border-2 border-transparent hover:border-green-600">
						Cart Rentals
					</a>
					<a href="/fleet" class="bg-black hover:bg-gray-900 text-white px-8 py-6 text-center font-bold uppercase text-lg transition border-2 border-transparent hover:border-green-600">
						Fleet Rentals
					</a>
					<a href="/inventory" class="bg-black hover:bg-gray-900 text-white px-8 py-6 text-center font-bold uppercase text-lg transition border-2 border-transparent hover:border-green-600">
						Golf Carts For Sale
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
