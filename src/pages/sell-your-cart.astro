					<div class="bg-purple-600 text-white rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
						3
					</div>
					<h3 class="text-xl font-bold mb-2 text-gray-900">Schedule Pickup</h3>
					<p class="text-gray-600">Accept offer and schedule pickup or drop-off</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Sell Form CTA -->
	<section class="py-16 bg-gradient-to-r from-purple-600 to-purple-700 text-white">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-4xl font-bold mb-4">Ready to Sell Your Golf Cart?</h2>
			<p class="text-xl mb-8 text-purple-100">
				Contact us today to get started with your quote
			</p>
			<a href="/contact" class="bg-white text-purple-600 px-8 py-3 rounded-lg font-bold hover:bg-purple-50 transition inline-block">
				Contact Us for a Quote
			</a>
		</div>
	</section>

	<!-- Contact Info -->
	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4 text-center">
			<h2 class="text-3xl font-bold mb-4 text-gray-900">Questions?</h2>
			<p class="text-xl mb-6 text-gray-600">
				Call us at <a href={companyData.contact.phoneLink} class="text-purple-600 hover:underline font-semibold">
					{companyData.contact.phone}
				</a> or visit our location
			</p>
			<p class="text-gray-600">{companyData.location.full}</p>
		</div>
	</section>
</Layout>

