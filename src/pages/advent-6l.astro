---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Advent 6L Golf Carts - Masters Golf Cars" description="Learn about Advanced EV Advent 6L golf carts">
	<section class="py-20 bg-gray-50">
		<div class="container mx-auto px-4 max-w-4xl">
			<h1 class="text-4xl font-bold mb-8 text-gray-900">Advent 6L Golf Carts</h1>
			
			<div class="bg-white rounded-lg shadow-lg p-8">
				<p class="text-lg text-gray-700 mb-8">
					The Advanced EV Advent 6L is an extended 6-passenger golf cart designed for maximum 
					comfort and capacity. Contact us for availability and pricing.
				</p>
				
				<div class="flex flex-wrap gap-4">
					<a href="/inventory" style="background-color: #86CA26;" class=" text-white px-8 py-3 rounded-lg font-bold  transition" style="--hover-bg: #6fa020;">
						View Full Inventory
					</a>
					<a href="/fleet" style="background-color: #86CA26;" class=" text-white px-8 py-3 rounded-lg font-bold  transition" style="--hover-bg: #6fa020;">
						Learn About Fleet Rentals
					</a>
					<a href="/contact" class="bg-gray-200 text-gray-900 px-8 py-3 rounded-lg font-bold hover:bg-gray-300 transition">
						Contact Us
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>

