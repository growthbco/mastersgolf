---
import Layout from '../layouts/Layout.astro';
import companyData from '../data/company.json';
---

<Layout title="Contact Us - Masters Golf Cars" description="Contact Masters Golf Cars for sales, rentals, service, and more">
	<!-- Hero Section -->
	<section class="bg-gradient-to-br from-green-600 to-green-800 text-white py-20">
		<div class="container mx-auto px-4">
			<h1 class="text-5xl font-bold mb-6">Contact Us</h1>
			<p class="text-xl text-green-100">
				We're here to help you find the perfect golf cart solution
			</p>
		</div>
	</section>

	<!-- Contact Info -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				<!-- Contact Details -->
				<div>
					<h2 class="text-3xl font-bold mb-6 text-gray-900">Get In Touch</h2>
					
					<div class="space-y-6">
						<div>
							<h3 class="text-xl font-semibold mb-2 text-gray-900">Location</h3>
							<p class="text-gray-600">
								{companyData.location.full}
							</p>
							<p class="text-gray-600 text-sm mt-1">
								Located between Ocala and The Villages, right on 441 across from the Market of Marion
							</p>
						</div>
						
						<div>
							<h3 class="text-xl font-semibold mb-2 text-gray-900">Phone</h3>
							<a href={companyData.contact.phoneLink} class="text-green-600 text-2xl font-bold hover:underline">
								{companyData.contact.phone}
							</a>
						</div>
						
						<div>
							<h3 class="text-xl font-semibold mb-2 text-gray-900">Email</h3>
							<a href={`mailto:${companyData.contact.email}`} class="text-green-600 hover:underline">
								{companyData.contact.email}
							</a>
						</div>
						
						<div>
							<h3 class="text-xl font-semibold mb-2 text-gray-900">Hours</h3>
							<p class="text-gray-600">Monday - Friday: 8:00 AM - 5:00 PM</p>
							<p class="text-gray-600">Saturday: 9:00 AM - 2:00 PM</p>
							<p class="text-gray-600">Sunday: Closed</p>
						</div>
					</div>
				</div>
				
				<!-- Contact Form -->
				<div>
					<h2 class="text-3xl font-bold mb-6 text-gray-900">Send Us a Message</h2>
					<form class="space-y-4">
						<div>
							<label for="name" class="block text-sm font-medium text-gray-700 mb-1">
								Name *
							</label>
							<input 
								type="text" 
								id="name" 
								name="name" 
								required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-transparent"
							/>
						</div>
						
						<div>
							<label for="email" class="block text-sm font-medium text-gray-700 mb-1">
								Email *
							</label>
							<input 
								type="email" 
								id="email" 
								name="email" 
								required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-transparent"
							/>
						</div>
						
						<div>
							<label for="phone" class="block text-sm font-medium text-gray-700 mb-1">
								Phone *
							</label>
							<input 
								type="tel" 
								id="phone" 
								name="phone" 
								required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-transparent"
							/>
						</div>
						
						<div>
							<label for="subject" class="block text-sm font-medium text-gray-700 mb-1">
								Subject *
							</label>
							<select 
								id="subject" 
								name="subject" 
								required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-transparent"
							>
								<option value="">Select a subject</option>
								<option value="rental">Golf Cart Rental</option>
								<option value="fleet">Fleet Rental</option>
								<option value="purchase">Purchase Inquiry</option>
								<option value="service">Service & Repairs</option>
								<option value="other">Other</option>
							</select>
						</div>
						
						<div>
							<label for="message" class="block text-sm font-medium text-gray-700 mb-1">
								Message *
							</label>
							<textarea 
								id="message" 
								name="message" 
								rows="5" 
								required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-600 focus:border-transparent"
							></textarea>
						</div>
						
						<button 
							type="submit"
							class="w-full bg-green-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-green-700 transition"
						>
							Send Message
						</button>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Map Placeholder -->
	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-8 text-gray-900">Find Us</h2>
			<div class="max-w-4xl mx-auto">
				<div class="bg-gray-300 h-96 rounded-lg flex items-center justify-center">
					<div class="text-center">
						<p class="text-gray-600 text-xl mb-4">üìç {companyData.location.full}</p>
						<p class="text-gray-500">Map integration can be added here</p>
					</div>
				</div>
			</div>
		</div>
	</section>
</Layout>

