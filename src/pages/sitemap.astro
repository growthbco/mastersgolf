---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sitemap - Masters Golf Cars" description="Site map for Masters Golf Cars website">
	<section class="py-20 bg-gray-50">
		<div class="container mx-auto px-4 max-w-4xl">
			<h1 class="text-4xl md:text-5xl font-bold mb-12 text-gray-900">Sitemap</h1>
			
			<div class="bg-white rounded-lg shadow-lg p-8 md:p-10">
				<ul class="space-y-3 text-gray-900">
					<li class="list-disc list-inside ml-0">
						<a href="/" class="text-blue-600 hover:underline font-semibold">Home</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<span class="font-semibold">Service</span>
						<ul class="ml-6 mt-2 space-y-2">
							<li class="list-circle list-inside">
								<a href="/golf-cart-repairs" class="text-blue-600 hover:underline">Golf Cart Repairs</a>
							</li>
							<li class="list-circle list-inside">
								<a href="/schedule-golf-cart-service" class="text-blue-600 hover:underline">Schedule Service</a>
							</li>
						</ul>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<span class="font-semibold">Rentals</span>
						<ul class="ml-6 mt-2 space-y-2">
							<li class="list-circle list-inside">
								<a href="/golf-cart-rentals" class="text-blue-600 hover:underline">Golf Cart Rentals</a>
								<ul class="ml-6 mt-1 space-y-1">
									<li class="list-square list-inside">
										<a href="/rent-a-golf-cart" class="text-blue-600 hover:underline">Rent a Golf Cart</a>
									</li>
								</ul>
							</li>
							<li class="list-circle list-inside">
								<a href="/fleet-rentals-quote" class="text-blue-600 hover:underline">Fleet Rentals Quote</a>
							</li>
						</ul>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/gallery" class="text-blue-600 hover:underline font-semibold">Gallery</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<span class="font-semibold">Golf Carts For Sale</span>
						<ul class="ml-6 mt-2 space-y-2">
							<li class="list-circle list-inside">
								<a href="/advent-2" class="text-blue-600 hover:underline">Advent 2</a>
							</li>
							<li class="list-circle list-inside">
								<a href="/advent-4" class="text-blue-600 hover:underline">Advent 4</a>
							</li>
							<li class="list-circle list-inside">
								<a href="/advent-4f" class="text-blue-600 hover:underline">Advent 4F</a>
							</li>
							<li class="list-circle list-inside">
								<a href="/advent-4l" class="text-blue-600 hover:underline">Advent 4L</a>
							</li>
							<li class="list-circle list-inside">
								<a href="/advent-6" class="text-blue-600 hover:underline">Advent 6</a>
							</li>
							<li class="list-circle list-inside">
								<a href="/advent-6l" class="text-blue-600 hover:underline">Advent 6L</a>
							</li>
						</ul>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/sell-your-cart" class="text-blue-600 hover:underline font-semibold">Sell Your Cart</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/contact" class="text-blue-600 hover:underline font-semibold">Contact</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/success" class="text-blue-600 hover:underline font-semibold">Success</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/privacy-policy" class="text-blue-600 hover:underline font-semibold">Privacy Policy</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/terms-conditions" class="text-blue-600 hover:underline font-semibold">Terms & Conditions</a>
					</li>
					
					<li class="list-disc list-inside ml-0">
						<a href="/ps-search-results" class="text-blue-600 hover:underline font-semibold">PS Search Results</a>
					</li>
				</ul>
			</div>
		</div>
	</section>
	
	<style>
		.list-circle {
			list-style-type: circle;
		}
		.list-square {
			list-style-type: square;
		}
	</style>
</Layout>

