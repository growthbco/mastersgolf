---
import Layout from '../layouts/Layout.astro';
import companyData from '../data/company.json';
---

<Layout title="Schedule Golf Cart Service - Masters Golf Cars" description="Schedule your golf cart service appointment in The Villages and Ocala">
	<!-- Hero Section -->
	<section style="background: linear-gradient(to right, #86CA26, var(--gradient-end, #6fa020));" class="bg-gradient-to-br  to-#5a8019 text-white py-20">
		<div class="container mx-auto px-4">
			<h1 class="text-5xl font-bold mb-6">Schedule Golf Cart Service</h1>
			<p style="color: rgba(134, 202, 38, 0.1);" class="text-xl mb-8 (134, 202, 38, 0.1)">
				Book your appointment for repairs, maintenance, or service
			</p>
		</div>
	</section>

	<!-- Main Content -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-3xl mx-auto">
				<h2 class="text-3xl font-bold mb-6 text-gray-900">Get Your Golf Cart Serviced</h2>
				<p class="text-lg text-gray-700 mb-8">
					Book an appointment for golf cart repairs, maintenance, or service. Our team offers 
					fast turnaround times and convenient pickup and delivery.
				</p>

				<!-- Service Form -->
				<div class="bg-gray-50 rounded-lg p-8">
					<form class="space-y-6">
						<div>
							<label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
							<input type="text" id="name" name="name" required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent" />
						</div>

						<div>
							<label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
							<input type="email" id="email" name="email" required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent" />
						</div>

						<div>
							<label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone *</label>
							<input type="tel" id="phone" name="phone" required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent" />
						</div>

						<div>
							<label for="service-type" class="block text-sm font-medium text-gray-700 mb-1">Service Type *</label>
							<select id="service-type" name="service-type" required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent">
								<option value="">Select service type</option>
								<option value="repair">Repair</option>
								<option value="maintenance">Maintenance</option>
								<option value="battery">Battery Replacement</option>
								<option value="custom">Custom Work</option>
								<option value="inspection">Inspection</option>
								<option value="other">Other</option>
							</select>
						</div>

						<div>
							<label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description *</label>
							<textarea id="description" name="description" rows="5" required
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent"></textarea>
						</div>

						<div>
							<label for="pickup" class="block text-sm font-medium text-gray-700 mb-1">Preferred Date</label>
							<input type="date" id="pickup" name="pickup"
								class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent" />
						</div>

						<button type="submit" style="background-color: #86CA26;" class="w-full  text-white px-6 py-3 rounded-lg font-bold  transition" style="--hover-bg: #6fa020;">
							Schedule Service
						</button>
					</form>
				</div>

				<!-- Contact Info -->
				<div style="background-color: rgba(134, 202, 38, 0.05);" class="mt-12 (134, 202, 38, 0.05) rounded-lg p-8 text-center">
					<h3 class="text-2xl font-bold mb-4 text-gray-900">Need Immediate Assistance?</h3>
					<p class="text-xl mb-6 text-gray-700">
						Call us at <a href={companyData.contact.phoneLink} class=" hover:underline font-semibold">
							{companyData.contact.phone}
						</a>
					</p>
					<p class="text-gray-600">{companyData.location.full}</p>
				</div>
			</div>
		</div>
	</section>
</Layout>

