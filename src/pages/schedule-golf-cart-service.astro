---
import Layout from '../layouts/Layout.astro';
import companyData from '../data/company.json';
---

<Layout title="Schedule Golf Cart Service - Masters Golf Cars" description="Schedule your golf cart service appointment in The Villages and Ocala">
	<!-- Hero Section -->
	<section class="bg-white py-12">
		<div class="container mx-auto px-4 text-center">
			<h1 class="text-4xl md:text-5xl font-bold uppercase tracking-wide text-gray-900">Schedule Service</h1>
			<p class="mt-4 text-lg md:text-xl text-gray-700 font-medium">
				Please fill out the form below and someone will contact you promptly.
			</p>
		</div>
	</section>

	<!-- Main Content -->
	<section class="py-16 bg-white">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto">
				<!-- Service Form Embed -->
				<div class="relative">
					<div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/5 to-black/10 rounded-[48px] pointer-events-none"></div>
					<div class="relative bg-white rounded-[48px] shadow-[0_25px_70px_rgba(0,0,0,0.12)] overflow-hidden p-3 md:p-6">
						<iframe
							src="https://links.roadsidelaunch.com/widget/form/jk7yYqm8mDLzUAxFYP4H"
							style="width:100%;height:902px;border:none;border-radius:40px"
							id="inline-jk7yYqm8mDLzUAxFYP4H"
							data-layout="{'id':'INLINE'}"
							data-trigger-type="alwaysShow"
							data-trigger-value=""
							data-activation-type="alwaysActivated"
							data-activation-value=""
							data-deactivation-type="neverDeactivate"
							data-deactivation-value=""
							data-form-name="Masters Golf Cart Service Form"
							data-height="902"
							data-layout-iframe-id="inline-jk7yYqm8mDLzUAxFYP4H"
							data-form-id="jk7yYqm8mDLzUAxFYP4H"
							title="Masters Golf Cart Service Form"
							loading="lazy"
						></iframe>
					</div>
				</div>

				<!-- Contact Info -->
				<div class="mt-16 bg-gray-100 rounded-3xl p-8 md:p-10 text-center shadow-lg">
					<h2 class="text-2xl font-bold mb-4 text-gray-900 uppercase tracking-wide">Need Immediate Assistance?</h2>
					<p class="text-lg text-gray-700 mb-4">
						Call us at <a href={companyData.contact.phoneLink} class="font-semibold text-brand-green hover:underline">
							{companyData.contact.phone}
						</a>
					</p>
					<p class="text-gray-600">{companyData.location.full}</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Visit Our Location -->
	<section class="py-16 bg-gray-50">
		<div class="container mx-auto px-4">
			<div class="max-w-4xl mx-auto text-center">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 uppercase tracking-wide">Visit Our Location</h2>
				<p class="text-lg text-gray-700 mb-2">
					We are located between Ocala and The Villages right on 441 across from the Market of Marion.
				</p>
				<p class="text-lg font-semibold text-gray-900 mb-8">{companyData.location.full}</p>

				<div class="rounded-2xl overflow-hidden shadow-xl border border-gray-200">
					<iframe
						src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6976.811623455518!2d-82.025011!3d29.034576000000005!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e7cfcec122cd0d%3A0x530a32876eeda9ee!2sMasters%20Golf%20Cars!5e0!3m2!1sen!2sus!4v1762801860534!5m2!1sen!2sus"
						width="100%"
						height="450"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
					></iframe>
				</div>
			</div>
		</div>
	</section>

	<script src="https://links.roadsidelaunch.com/js/form_embed.js" defer></script>
</Layout>

