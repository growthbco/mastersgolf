---
import Layout from '../layouts/Layout.astro';
import CartCard from '../components/CartCard.astro';
import inventoryData from '../data/inventory.json';

// For this simple version, we'll display all inventory
// In production, you'd add filtering and search functionality
---

<Layout title="Golf Cart Inventory - Masters Golf Cars" description="Browse our selection of new and used golf carts for sale in Central Florida">
	<div class="container mx-auto px-4 py-12">
		<h1 class="text-4xl font-bold mb-4 text-gray-900">Golf Carts For Sale</h1>
		<p class="text-gray-600 mb-8">
			2-Seater, 4-Seater, 6-Seater, and Utility Golf Carts for sale at Masters Golf Cars in Belleview, FL near the Villages and Ocala.
		</p>

		<!-- Filter/Info Section -->
		<div class="bg-gray-100 rounded-lg p-6 mb-8">
			<p class="text-gray-700">
				<strong>Displaying {inventoryData.length} carts</strong> | 
				Contact us at <a href="tel:3523070111" class="text-green-600 hover:underline font-semibold">(352) 307-0111</a> for more information
			</p>
		</div>

		<!-- Inventory Grid -->
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
			{inventoryData.map((cart) => (
				<CartCard
					name={cart.name}
					model={cart.model}
					price={cart.price}
					salePrice={cart.salePrice}
					stock={cart.stock}
					image={cart.image}
					slug={`${cart.id}`}
				/>
			))}
		</div>

		<!-- CTA Section -->
		<div class="mt-16 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg p-12 text-center">
			<h2 class="text-3xl font-bold mb-4">Don't See What You're Looking For?</h2>
			<p class="text-xl mb-6 text-green-100">
				Our inventory changes frequently. Contact us and we'll help you find the perfect golf cart.
			</p>
			<a href="/contact" class="bg-white text-green-600 px-8 py-3 rounded-lg font-bold hover:bg-green-50 transition inline-block">
				Contact Us
			</a>
		</div>
	</div>
</Layout>

