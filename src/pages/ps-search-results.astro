---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Search Results - Masters Golf Cars" description="Search our golf cart inventory">
	<section class="py-20 bg-gray-50">
		<div class="container mx-auto px-4 max-w-4xl">
			<h1 class="text-4xl font-bold mb-8 text-gray-900">Search Results</h1>
			
			<div class="bg-white rounded-lg shadow-lg p-8">
				<p class="text-lg text-gray-700 mb-8">
					Search our inventory to find the perfect golf cart for you.
				</p>
				
				<div class="mb-6">
					<input type="text" placeholder="Search by keyword, stock number, or model..." 
						class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-#86CA26 focus:border-transparent" />
				</div>
				
				<a href="/inventory" style="background-color: #86CA26;" class="inline-block  text-white px-8 py-3 rounded-lg font-bold  transition" style="--hover-bg: #6fa020;">
					View Full Inventory
				</a>
			</div>
		</div>
	</section>
</Layout>

