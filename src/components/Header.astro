---
import companyData from '../data/company.json';
---

<header class="fixed top-0 w-full z-50">
	<!-- Top bar with contact info -->
	<div class="bg-black w-full py-2 px-4">
		<div class="container mx-auto flex justify-between items-center text-green-400">
			<div class="flex items-center">
				<span class="mr-1">ğŸ“</span>
				<a href={companyData.contact.phoneLink} class="hover:text-green-300 transition">{companyData.contact.phone}</a>
			</div>
			<div class="flex items-center">
				<span class="mr-1">ğŸ“</span>
				<a href="https://maps.google.com/?q=12885+S+US+Hwy+441+Belleview,+FL+34420" target="_blank" class="hover:text-green-300 transition">
					{companyData.location.full}
				</a>
			</div>
		</div>
	</div>
	
	<!-- Main navigation -->
	<nav class="bg-white bg-opacity-95 backdrop-blur-sm shadow-md">
		<div class="container mx-auto px-4 py-6">
			<!-- Logo -->
			<div class="flex justify-center mb-6">
				<a href="/" class="inline-block">
					<h1 class="text-6xl font-bold" style="font-family: 'Brush Script MT', cursive;">
						<span style="background: linear-gradient(to bottom, #FFD700, #FF8C00); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; text-shadow: 3px 3px 0px #000, -1px -1px 0px #000, 1px -1px 0px #000, -1px 1px 0px #000;">Masters</span>
					</h1>
					<p class="text-xl font-bold uppercase tracking-wide" style="background: linear-gradient(to bottom, #FFD700, #FF8C00); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; text-shadow: 2px 2px 0px #000, -1px -1px 0px #000, 1px -1px 0px #000, -1px 1px 0px #000;">
						Golf Cars, LLC
					</p>
				</a>
			</div>
			
			<!-- Navigation bar -->
			<div class="bg-gray-800 bg-opacity-90 rounded-lg px-6 py-3">
				<div class="flex flex-wrap justify-center items-center gap-4 md:gap-6 text-white font-bold uppercase text-sm md:text-base">
					<a href="/" class="hover:text-green-400 transition">Home</a>
					<a href="/golf-cart-repairs" class="hover:text-green-400 transition">Service</a>
					<a href="/rentals" class="hover:text-green-400 transition">Rentals</a>
					<a href="/gallery" class="hover:text-green-400 transition">Gallery</a>
					<a href="/inventory" class="hover:text-green-400 transition">Golf Carts for Sale</a>
					<a href="/sell-your-cart" class="hover:text-green-400 transition">Sell Your Cart</a>
					<a href="/contact" class="hover:text-green-400 transition">Contact</a>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileNav = document.getElementById('mobile-nav');
	
	mobileMenuButton?.addEventListener('click', () => {
		mobileNav?.classList.toggle('hidden');
	});
</script>

