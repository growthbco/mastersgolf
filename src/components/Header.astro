---
import companyData from '../data/company.json';
---

<header class="fixed top-0 w-full z-50">
	<!-- Top bar with contact info -->
	<div class="bg-black w-full py-2 px-4">
		<div class="container mx-auto flex justify-between items-center" style="color: #4CAF50;">
			<div class="flex items-center">
				<span class="mr-1">ğŸ“</span>
				<a href={companyData.contact.phoneLink} class="hover:opacity-80 transition">{companyData.contact.phone}</a>
			</div>
			<div class="flex items-center">
				<span class="mr-1">ğŸ“</span>
				<a href="https://maps.google.com/?q=12885+S+US+Hwy+441+Belleview,+FL+34420" target="_blank" class="hover:opacity-80 transition">
					{companyData.location.full}
				</a>
			</div>
		</div>
	</div>
	
	<!-- Main navigation -->
	<nav class="bg-white bg-opacity-95 backdrop-blur-sm shadow-md">
		<div class="container mx-auto px-4 py-6">
			<!-- Logo -->
			<div class="flex justify-center mb-6">
				<a href="/" class="inline-block">
					<img src={companyData.logo} alt={companyData.name} class="h-24" />
				</a>
			</div>
			
			<!-- Navigation bar -->
			<div class="bg-gray-800 bg-opacity-90 rounded-lg px-6 py-3">
				<div class="flex flex-wrap justify-center items-center gap-4 md:gap-6 text-white font-bold uppercase text-sm md:text-base">
					<a href="/" class="hover:opacity-80 transition">Home</a>
					<a href="/golf-cart-repairs" class="hover:opacity-80 transition">Service</a>
					<a href="/rentals" class="hover:opacity-80 transition">Rentals</a>
					<a href="/gallery" class="hover:opacity-80 transition">Gallery</a>
					<a href="/inventory" class="hover:opacity-80 transition">Golf Carts for Sale</a>
					<a href="/sell-your-cart" class="hover:opacity-80 transition">Sell Your Cart</a>
					<a href="/contact" class="hover:opacity-80 transition">Contact</a>
				</div>
			</div>
		</div>
	</nav>
</header>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileNav = document.getElementById('mobile-nav');
	
	mobileMenuButton?.addEventListener('click', () => {
		mobileNav?.classList.toggle('hidden');
	});
</script>

