---
import companyData from '../data/company.json';
---

<header class="fixed top-0 w-full bg-white shadow-md z-50">
	<nav class="container mx-auto px-4 py-4">
		<div class="flex items-center justify-between">
			<a href="/" class="flex items-center space-x-3">
				<img src={companyData.logo} alt={companyData.name} class="h-12" />
			</a>
			
			<!-- Mobile menu button -->
			<button id="mobile-menu-button" class="md:hidden text-2xl" aria-label="Toggle menu">
				â˜°
			</button>
			
			<!-- Navigation links -->
			<div id="nav-menu" class="hidden md:flex items-center space-x-6">
				<a href="/" class="text-gray-700 hover:text-green-600 font-medium">Home</a>
				<a href="/inventory" class="text-gray-700 hover:text-green-600 font-medium">Inventory</a>
				<a href="/rentals" class="text-gray-700 hover:text-green-600 font-medium">Rentals</a>
				<a href="/fleet" class="text-gray-700 hover:text-green-600 font-medium">Fleet Rentals</a>
				<a href="/contact" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 font-medium">
					Contact Us
				</a>
			</div>
		</div>
		
		<!-- Mobile navigation -->
		<div id="mobile-nav" class="hidden md:hidden mt-4 pb-4">
			<div class="flex flex-col space-y-3">
				<a href="/" class="text-gray-700 hover:text-green-600 font-medium py-2">Home</a>
				<a href="/inventory" class="text-gray-700 hover:text-green-600 font-medium py-2">Inventory</a>
				<a href="/rentals" class="text-gray-700 hover:text-green-600 font-medium py-2">Rentals</a>
				<a href="/fleet" class="text-gray-700 hover:text-green-600 font-medium py-2">Fleet Rentals</a>
				<a href="/contact" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 font-medium text-center">
					Contact Us
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileNav = document.getElementById('mobile-nav');
	
	mobileMenuButton?.addEventListener('click', () => {
		mobileNav?.classList.toggle('hidden');
	});
</script>

