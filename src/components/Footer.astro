---
import companyData from '../data/company.json';
---

<footer class="bg-gray-900 text-white mt-16">
	<div class="container mx-auto px-4 py-12">
		<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
			<!-- Company Info -->
			<div>
				<h3 class="text-xl font-bold mb-4">{companyData.name}</h3>
				<p class="text-gray-400 mb-2">{companyData.tagline}</p>
				<p class="text-gray-400 text-sm">
					Since {companyData.founded}, serving Central Florida
				</p>
			</div>
			
			<!-- Quick Links -->
			<div>
				<h3 class="text-xl font-bold mb-4">Quick Links</h3>
				<ul class="space-y-2">
					<li><a href="/" class="text-gray-400 hover:text-green-400">Home</a></li>
					<li><a href="/inventory" class="text-gray-400 hover:text-green-400">Golf Cart Inventory</a></li>
					<li><a href="/rentals" class="text-gray-400 hover:text-green-400">Rentals</a></li>
					<li><a href="/fleet" class="text-gray-400 hover:text-green-400">Fleet Rentals</a></li>
					<li><a href="/contact" class="text-gray-400 hover:text-green-400">Contact Us</a></li>
				</ul>
			</div>
			
			<!-- Contact Info -->
			<div>
				<h3 class="text-xl font-bold mb-4">Contact Us</h3>
				<p class="text-gray-400 mb-2">
					<a href={companyData.location.address} class="hover:text-green-400">
						{companyData.location.full}
					</a>
				</p>
				<p class="text-gray-400 mb-2">
					Phone: <a href={companyData.contact.phoneLink} class="hover:text-green-400">
						{companyData.contact.phone}
					</a>
				</p>
				<p class="text-gray-400">
					Email: <a href={`mailto:${companyData.contact.email}`} class="hover:text-green-400">
						{companyData.contact.email}
					</a>
				</p>
			</div>
		</div>
		
		<div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400 text-sm">
			<p>&copy; {new Date().getFullYear()} {companyData.name}. All rights reserved.</p>
		</div>
	</div>
</footer>

